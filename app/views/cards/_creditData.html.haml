.myCredit
  .myCredit__data
    .myCredit__data--number
      ="**** **** **** " + @card_data.last4
    .myCredit__data--brand
      - if @card_data.brand == "Visa" then
        %i.fab.fa-cc-visa
      - elsif @card_data.brand == "MasterCard" then
        %i.fab.fa-cc-mastercard
      - elsif @card_data.brand == "JCB" then
        %i.fab.fa-cc-jcb
      - elsif @card_data.brand == "American Express" then
        %i.fab.fa-cc-amex
      - elsif @card_data.brand == "Diners Club" then
        %i.fab.fa-cc-diners-club
      - elsif @card_data.brand == "Discover" then
        %i.fab.fa-cc-discover
      - else
        %i.far.fa-credit-card
    .myCredit__data--exp
      %label 有効期限(MM/YY)
      - month = @card_data.exp_month
      - exp_year = @card_data.exp_year.to_s.slice(2,3)
      - if month < 10 then
        = "0" + month.to_s + "/" + exp_year
      - else
        = month.to_s + "/" + exp_year
  %button.btn.myCredit__links
    - if @default_card == @card_data.id
      %span.btn.btn-danger 使用中
      = link_to edit_card_path(@card), class: "btn btn-secondary myCredit__links--edit" do
        編集