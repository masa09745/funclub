.stock-wrapper
  = render "shared/header-main"
  .stockIndex
    %h1.title
      チケット在庫管理
    .stockIndex-list
      - if can? :edit, current_user
        .stockIndex-add
          =link_to new_stock_path do
            在庫を追加する
      .StockIndex-inner
        - @stocks.each do |stock|
          %table
            %tr
              %th 試合日時
              %th 対戦相手
              %th 席種
              %th 金額
              %th 在庫量
            %tr
              %td
                = l stock.schedule.match_date
              %td
                = stock.schedule.team.name
              %td
                = stock.grade
              %td
                = stock.price
              %td
                = stock.remain