.stock-wrapper
  = render "shared/header-main"
  .stockIndex
    %h1.title
      チケット在庫管理
    .stockIndex-list
      - if can? :edit, current_user
        .stockIndex-add
          =link_to new_stock_path do
            在庫を追加する
      .StockIndex-inner
        - @stocks.each do |stock|
          .
          = l stock.schedule.match_date
          = stock.schedule.team.name
          = stock.grade
          = stock.price
          = stock.remain